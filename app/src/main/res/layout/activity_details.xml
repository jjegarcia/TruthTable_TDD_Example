<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="viewModel"
                type="com.example.truthtable_tdd_example.details.DetailsActivityViewModel" />
    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
                android:id="@+id/ActivityDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/DetailsActivityDescription"
                tools:text="@string/DetailsActivityDescription" />

        <include
                android:id="@+id/vinItem"
                layout="@layout/info_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        <include
                android:id="@+id/percentageItem"
                layout="@layout/info_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        <include
                android:id="@+id/stateItem"
                layout="@layout/info_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        <include
                android:id="@+id/dateItem"
                layout="@layout/info_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        <include
                android:id="@+id/bar"
                layout="@layout/bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

    </LinearLayout>
</layout>